.news-list{
  display: flex;
}

.news-item{
  display: flex;
  flex-shrink: 0;
  flex-direction: column;
  width: 120rpx;
}

.news-title{
  font-size: 30rpx;
  line-height: 42rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  width: 60rpx;
  height: 60rpx;
}
.news-date{
  margin-top: 300rpx;
  font-size: 30rpx;
  line-height: 42rpx;
}

.news-image{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  margin-top: 30rpx;
  z-index: -1;
}

.content-list{
  font-size: 30rpx;
  line-height: 42rpx;
}

.content-item{
  height: 160rpx;
  width: 750rpx;
  display: flex;
  align-items: center;
}

.content-date{
  padding-right: 30rpx;
  text-align: right;
  margin-bottom: 10rpx;
}

.content-title{
  margin-left: 10rpx;
  padding-top: 10rpx;
  margin-bottom: 10rpx;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.content-image{
  margin-top: 5rpx;
  margin-bottom: 5rpx;
  width: 220rpx;
  height: 150rpx;
}
